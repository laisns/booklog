<div class="btn-group btn-group-sm">
  <div class="btn-group">
    <%= button_tag class: 'btn btn-info dropdown-toggle', data: { toggle: 'dropdown' } do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform;
      top: 0px; left: 0px; transform: translate3d(0px, 38px, 0px);">
      <%= toggle_book_status(book_list) %>
    </div>
  </div>
  <div class="btn-group">
    <%= button_tag class: 'btn btn-danger dropdown-toggle', data: { toggle: 'dropdown' } do %>
      <i class="fas fa-heart"></i>
    <% end %>
    <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform;
      top: 0px; left: 0px; transform: translate3d(0px, 38px, 0px);">
      <%= toggle_user_book_favorites(book_list) %>
    </div>
  </div>
  <%= link_to book_list_path(book_list), method: :delete,
              data: { confirm: "Remove book from this list?" },
              class: 'btn btn-success' do %>
    <i class="fas fa-trash"></i>
  <% end %>
</div>