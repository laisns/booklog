  <div class="card card-red bg-dark-opacity-8">
    <div class="card-header">
      <h3 class="card-title" id="<%= list.id %>">Add Books to list</h3>

      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fas fa-minus"></i></button>
      </div>
    </div>
    <div class="card-body">
      <%= form_for new_user_book_path do |f| %>
        <div class="form-group">
          <%= f.label :book_id, 'Name' %>
          <%= f.text_field :book_id, class: 'form-control', data: { behavior: 'autocomplete' } %>
        </div>
      <% end %>
        <div class="form-group">
          <label for="inputStatus">Status</label>
          <select class="form-control custom-select">
            <option selected="" disabled="">Select one</option>
            <option>To Read</option>
            <option>Read</option>
            <option>Reading Now</option>
          </select>
        </div>
        <div class="form-group">
          <label for="inputClientCompany">Mark this Book as Favorite</label>
          <input type="text" id="inputClientCompany" class="form-control">
        </div>
        <div class="form-group">
          <label for="inputProjectLeader">Mark as Favorite Author</label>
          <input type="text" id="inputProjectLeader" class="form-control">
        </div>
<!--      <#% end %>-->
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
