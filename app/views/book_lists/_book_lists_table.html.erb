<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @list.books.map do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author.name %></td>
      <td class="text-right py-0 align-middle">
        <div class="btn-group btn-group-sm">
          <div class="btn-group">
            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-eye"></i>
            </button>
            <div class="dropdown-menu" x-placement="bottom-start"
                 style="position: absolute; will-change: transform;
                     top: 0px; left: 0px; transform: translate3d(0px, 38px, 0px);">
              <a class="dropdown-item" href="#">To Read</a>
              <a class="dropdown-item" href="#">Read</a>
              <a class="dropdown-item" href="#">Currently Reading</a>
            </div>
          </div>
          <div class="btn-group">
            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-heart"></i>
            </button>
            <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform;
                     top: 0px; left: 0px; transform: translate3d(0px, 38px, 0px);">
              <a class="dropdown-item" href="#">Favorite Book</a>
              <a class="dropdown-item" href="#">Favorite Author</a>
            </div>
          </div>
          <a href="#" class="btn btn-success"><i class="fas fa-trash"></i></a>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>