<tbody>
  <% books.map do |book| %>
    <tr>
      <td>
        <%= image_tag("generic-book-cover.jpg", class: 'img-thumbnail w-25 h-25') %>
      </td>
      <td><p class="text-wrap text-truncate small"style="width: 14rem;">
        <em><%= book.synopsis if book.synopsis.present? %></em>
      </p></td>
      <td>
        <p class="font-italic mb-0"><%= book.title %></p>
        <p class="mb-0">by <%= link_to book.author.name, author_path(book.author.id) %></p>
        <p class="mb-0">First Published/Released: <%= book.release_year %></p>
        <p class="mb-0"><%= book.language %></p>
        <p class="font-italic mb-0"><%= book.genre.description %></p>
      </td>
      <td>
        <button class="btn btn-outline-light bg-lightblue mb-1">add to list</button><br>
        <%= link_to 'edit info', edit_book_path(book), remote: true,
                    data: { toggle: 'modal', target: '#new_books_modal' },
                    class: 'btn btn-outline-light bg-lightblue' %>
      </td>
    </tr>
  <% end %>
</tbody>
