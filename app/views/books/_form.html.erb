<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content bg-old-blue">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel"><%= form_action(@book) %></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%= form_for @book do |f| %>
      <div class="modal-body">
        <p>Add New Book for <strong><%= @author.name %></strong></p>
        <%= f.hidden_field :author_id, { value: @author.id } %>
        <div class="form-group">
          <%= f.text_area :title, class: 'form-control bg-old-blue',
                          placeholder: "Enter Book Title", required: true %>
        </div>
        <div class="form-row">
          <div class="form-group col-sm-4">
            <%= f.text_field :release_year, maxlength: 4, placeholder: "Release Year",
                             class: 'form-control bg-old-blue' %>
          </div>
          <div class="form-group col-md-6 offset-2">
            <%= f.select :genre_id, books_genres_for_select,
                         { selected: '', disabled: '', prompt: 'Choose a book genre' },
                         required: true, class: 'form-control bg-old-blue' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.text_area :synopsis, class: 'form-control bg-old-blue',
                          placeholder: "Enter a Synopsis for this Book" %>
        </div>
        <div class="form-group">
          <%= f.text_field :language, placeholder: "Enter Book Original Language",
                             class: 'form-control bg-old-blue' %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit 'Save Book', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
