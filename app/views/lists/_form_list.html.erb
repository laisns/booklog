<div class="text-white form-list-content">
  <h2 class="text-white"><%= form_action(@list) %></h2>
  <p> Coordinate, track, and update your work in one place, so projects stay transparent and on schedule.</p>
  <hr class="bg-gray">
  <div class="card card-gray bg-old-blue">
    <div class="card-header">
      <h3 class="card-title">List name</h3>
      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse"
                data-toggle="tooltip" title="Collapse">
          <i class="fas fa-minus"></i>
        </button>
      </div>
    </div>
    <div class="card-body" style="display: block;">
      <%= form_for shallow_args(@user, @list) do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_area :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Save', class: 'btn btn-default bg-teal' %>
        </div>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to_if(!@list.persisted?, fa_plus_icon, '#', disabled: true,
                   class: button_style) do |text| %>
      <%= link_to new_user_book_path(list: @list.id), class: button_style do %>
        <%= text %>
      <% end %>
    <% end %>
  </div>
</div>
