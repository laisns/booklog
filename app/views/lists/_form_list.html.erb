<div class="col-md-6 text-white">
  <div class="card card-blue bg-dark-opacity-8">
    <div class="card-header">
      <h3 class="card-title"><%= form_action(@list) %></h3>
      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fas fa-minus"></i></button>
      </div>
    </div>
    <div class="card-body" style="display: block;">
      <%= form_for shallow_args(@user, @list) do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_area :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create', class: 'btn btn-primary bg-primary' %>
        </div>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to new_user_book_path(list: @list.id),
                class: 'btn btn-danger btn-lg btn-block text-left' do %>
      Add Books to List <i class="fas fa-plus"></i>
    <% end %>
  </div>
</div>

