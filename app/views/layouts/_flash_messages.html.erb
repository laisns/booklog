<% flash.each do |type, msg| %>
  <div id="toastsContainerBottomLeft" class="toasts-top-left fixed">
    <div class="toast fade show <%= flash_type(type) %>" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header">
        <i class="fa-3x pr-2 <%= flash_icon_type(type) %>"></i>
        <strong class="mr-auto"><%= I18n.t "flash.messages.#{type}" %></strong>
        <button data-dismiss="toast" type="button" class="ml-2 mb-1 close toastBtn" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="toast-body"><%= msg %></div>
    </div>
  </div>
<% end %>
