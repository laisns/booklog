<div class="tab-pane" id="settings">
    <%= form_with model: @user, class: 'form-horizontal' do |f| %>
      <div class="form-group row">
        <%= f.label :login_name, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-4 form-inline">
          <%= f.text_field :login_name, class: 'form-control-plaintext text-white',
                           value: "@#{@user.login_name}", disabled: true %>
        </div>
        <div class="col-sm-4 form-inline">
          <small class="text-muted text-maroon">Username cannot be changed.
            <abbr class="" data-toggle="tooltip" data-placement="top" title="ablublue">Why?</abbr>
          </small>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :name, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-4">
          <%= f.text_field :name, class: 'form-control-plaintext text-white',
                           placeholder: @user.name %>
        </div>
        <%= f.label :birth_date, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-4">
          <%= f.text_field :birth_date, class: 'form-control-plaintext text-white flatpickr',
                           value: @user.birth_date.strftime("%B %d, %Y"),
                           data: { behavior: 'flatpickr' }, placeholder: @user.birth_date.strftime("%B %d, %Y") %>
        </div>
      </div>
      <div class="form-group row pl-3">
        <div class="form-check col-sm-6">
          <%= f.check_box :personal_activity, class: 'form-check-input custom-control-input-danger', id: 'customCheckbox4' %>
          <%= f.label :personal_activity, 'Display personal activity', class: 'form-check-label' %>
        </div>
        <div class="form-check col-sm-6">
          <%= f.check_box :birthday, class: 'form-check-input' %>
          <%= f.label :birthday, 'Show age and birthday', class: 'form-check-label' %>
        </div>
      </div>
      <%= link_to '#changePassword', data: { toggle: 'collapse' },
                  class: 'text-white nav-link btn btn-outline-dark mb-4' do %>
        <i class="fas fa-key"></i> Change Password
      <% end %>
      <div class="collapse" id="changePassword">
          <div class="form-group row">
            <%= f.label :password, 'Password', class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-10">
              <%= f.password_field :password, placeholder: 'Type new password',
                                     class: 'form-control'  %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :password_confirmation, 'Password', class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, class: 'form-control',
                                     placeholder: 'Type password confirmation' %>
            </div>
          </div>
      </div>
      <div class="form-group row align-content-end">
        <div class="offset-sm-2 col-sm-10">
          <%= f.submit 'Save', class: 'btn btn-outline-dark bg-red' %>
          <button class="btn btn-outline-dark bg-yellow">Cancel</button>
        </div>
      </div>
    <% end %>
</div>