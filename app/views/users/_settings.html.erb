<div class="tab-pane" id="settings">
    <%= form_for edit_user_path(@user), class: 'form-horizontal' do |f| %>
      <div class="form-group row">
        <%= f.label :login_name, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-4 form-inline">
          <%= f.text_field :login_name, class: 'form-control-plaintext',
                           placeholder: "@#{@user.login_name}", disabled: true %>
        </div>
        <div class="col-sm-4 form-inline">
        <small class="text-muted text-maroon"> Username cannot be changed. </small>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :name, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-4">
          <%= f.text_field :name, class: 'form-control-plaintext text-white',
                           value: @user.name %>
        </div>
        <%= f.label :birth_date, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-4">
          <%= f.text_field :birth_date, class: 'form-control-plaintext text-white',
                           data: { behavior: 'flatpickr' }%>
        </div>
      </div>
      <%= link_to '#changePassword', data: { toggle: 'collapse' },
                  class: 'text-white nav-link btn btn-outline-dark mb-4' do %>
        <i class="fas fa-key"></i> Change Password
      <% end %>
      <div class="collapse" id="changePassword">
        <%= form_tag user_path(@user), method: :put do %>
          <div class="form-group row">
            <%= label_tag :password, 'Password', class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-10">
              <%= password_field_tag :password, nil, placeholder: 'Type new password',
                                     class: 'form-control'  %>
            </div>
          </div>
          <div class="form-group row">
            <%= label_tag :password_confirmation, 'Password', class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-10">
              <%= password_field_tag :password_confirmation, nil, class: 'form-control',
                                     placeholder: 'Type password confirmation' %>
            </div>
          </div>
          <div class="form-group row text-white m-lg-auto">
            <%= button_tag 'Confirm new Password',
                           class: ' nav-link btn btn-outline-dark
                           col col-lg-6 '%>
          </div>
        <% end %>
      </div>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <button type="submit" class="btn btn-outline-dark bg-red">Submit</button>
          <button type="submit" class="btn btn-outline-dark bg-yellow">Cancel</button>
        </div>
      </div>
    <% end %>
</div>