<div class="custom-card-body">
  <div class="sign-in-up-form">
    <h2>REGISTER</h2>
    <%= form_for User.new do |f| %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.text_field :name, placeholder: 'Name' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.text_field :login_name, placeholder: 'Login Name' %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group date" id="datetimepicker1">
          <%= f.label :birth_date, 'Select Birth Date' %>
          <%= f.date_select :birth_date, class: 'form-control' %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.text_field :password, placeholder: 'Password'%>
        </div>
        <div class="form-group col-md-6">
          <%= f.text_field :password_confirmation, placeholder: 'Confirm Password'%>
        </div>
      </div>
      <%= f.submit 'Register' %>
    <% end %>
  </div>
</div>
