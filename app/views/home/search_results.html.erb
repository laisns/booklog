<body class="image-background">
<div class="callout callout-info bg-gray-light">
<h5><i class="fas fa-info"></i> Note:</h5>
  Showing search result. <a href=<%= search_path %>>Back to search page</a>
</div>
<div class="row w-75 mx-auto">
  <div class="col-12">
    <div class="card">
      <div class="card-header bg-gray-light">
        <h3 class="card-title"><i class="fas fa-exclamation-triangle text-danger"></i>
          Couldn't find what you are looking for? Search
          <a href="#">elsewhere</a> or <%= link_to 'manually add data', new_author_path %>
        </h3>
        <div class="card-tools">
          <div class="input-group input-group-sm" style="width: 150px;">
            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
            <div class="input-group-append">
              <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </div>
      </div>
      <div class="card-body p-0">
        <%= "No results matches your search" unless @results.present? %>
        <table class="table table-head-fixed table-hover table-dark text-nowrap">
          <%= render partial: 'books/books_table', locals: { books: @results } %>
        </table>
      </div>
    </div>
  </div>
</div>
</body>